<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="30dp">
    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="25sp"
        android:text="Download asset"
        android:layout_marginBottom="10dp"
        />
    <ScrollView
        android:id="@+id/scrollView"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:layout_above="@id/downloadButton"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:showDividers="middle"
            android:divider="@drawable/item_divider"
            >
            <RelativeLayout
                android:background="@drawable/item_background"
                android:padding="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Bitrate"
                    />
                <Spinner
                    android:id="@+id/videoTrackSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />
           </RelativeLayout>
            <enigma.redbeemedia.com.downloads.view.MultiSelection
                android:id="@+id/audioTrackSelection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:text="Audio"
                android:background="@drawable/item_background"
                android:padding="7dp"
                />
            <enigma.redbeemedia.com.downloads.view.MultiSelection
                android:id="@+id/subtitleTrackSelection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:text="Subtitles"
                android:background="@drawable/item_background"
                android:padding="7dp"
                />
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/loadOptionsProgressBar"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:layout_above="@id/downloadButton"
        >
        <ProgressBar
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    <enigma.redbeemedia.com.downloads.view.AsyncButton
        android:id="@+id/downloadButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        app:text="Download" />
</RelativeLayout>